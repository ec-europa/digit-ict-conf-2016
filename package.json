    "run-sequence": "^1.2.1",
    "standard-version": "^2.3.0",
    "validate-commit-msg": "^2.6.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "maxSubjectLength": 100
    }
  },
  "lint-staged": {
    "lint": "*.js"
  }
