    "react-flip-move": "^2.4.2",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "react-router-scroll": "^0.3.2",
    "redux": "^3.6.0",
    "redux-persist": "^3.5.0",
    "redux-thunk": "^2.1.0",
    "sanitize.css": "^4.1.0",
    "scriptjs": "^2.5.8",
