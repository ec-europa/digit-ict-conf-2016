{
  "name": "digit-ict-conf-2016",
  "description": "DIGIT-ICT Conference 2016 website",
  "version": "0.10.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ec-europa/digit-ict-conf-2016.git"
  },
  "author": "",
  "license": "EUPL-1.1",
  "bugs": {
    "url": "https://github.com/ec-europa/digit-ict-conf-2016/issues"
  },
  "homepage": "https://github.com/ec-europa/digit-ict-conf-2016#readme",
  "scripts": {
    "postinstall": "npm run build:dll",
    "prebuild": "npm run build:clean",
    "build": "cross-env NODE_ENV=production webpack --config tools/webpack/webpack.prod.babel.js --color -p",
    "build:clean": "rimraf ./build/*",
    "build:dll": "node ./tools/scripts/dependencies.js",
    "start": "cross-env NODE_ENV=development node tools/scripts/server.js",
    "postsetup": "npm run build:dll",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint . --ignore-pattern tools/scripts",
    "lint:scss": "stylelint ./app/**/*.scss",
    "lint-staged": "lint-staged",
    "release": "standard-version",
    "serve": "cross-env NODE_ENV=production node tools/scripts/prodServer.js"
  },
  "lint-staged": {
    "*.js": [
      "lint:js"
    ],
    "*.scss": [
      "lint:scss"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "maxSubjectLength": 100
    }
  },
  "dllPlugin": {
    "path": "build",
    "exclude": [
      "chalk",
      "compression",
      "cross-env",
      "typi",
      "mappy-breakpoints",
      "sanitize.css"
    ],
    "include": [
      "core-js",
      "lodash",
      "eventsource-polyfill"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "classnames": "^2.2.5",
    "headroom.js": "^0.9.3",
    "history": "^2.1.2",
    "mappy-breakpoints": "^0.2.3",
    "react": "^15.2.1",
    "react-addons-css-transition-group": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-flip-move": "^2.4.1",
    "react-helmet": "^3.1.0",
    "react-portal": "^2.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.0",
    "react-router-scroll": "^0.2.1",
    "redux": "^3.5.2",
    "redux-persist": "^3.2.2",
    "sanitize.css": "^4.1.0",
    "scriptjs": "^2.5.8",
    "typi": "^2.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.7",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.13.0",
    "chalk": "^1.1.3",
    "cheerio": "^0.20.0",
    "connect-history-api-fallback": "^1.2.0",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.4.0",
    "eslint-plugin-import": "^1.11.0",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "front-matter": "^2.1.0",
    "ghooks": "^1.3.2",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "image-webpack-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "lint-staged": "^2.0.2",
    "loader-utils": "^0.2.15",
    "lodash": "^4.13.1",
    "markdown-it": "^7.0.0",
    "node-sass": "^3.8.0",
    "null-loader": "^0.1.1",
    "offline-plugin": "^3.4.2",
    "plop": "^1.5.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.4.1",
    "pre-commit": "^1.1.3",
    "react-hot-loader": "^1.3.0",
    "rimraf": "^2.5.3",
    "sass-loader": "^4.0.0",
    "shelljs": "^0.7.0",
    "standard-version": "^2.4.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.0.3",
    "stylelint-config-standard": "^11.0.0",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.6.1",
    "webpack": "2.1.0-beta.15",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.1"
  }
}
