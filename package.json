  },
  "homepage": "https://github.com/ec-europa/digit-ict-conf-2016#readme",
  "dependencies": {
    "dialog-polyfill": "^0.4.3",
    "material-design-lite": "^1.1.3",
    "picturefill": "^3.0.2",
    "preact": "^4.8.0",
    "preact-redux": "^1.0.1",
    "preact-router": "^2.0.0",
    "redux": "^3.5.2"
