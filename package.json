{
  "name": "digit-ict-conf-2016",
  "description": "DIGIT-ICT Conference 2016 website",
  "version": "0.6.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ec-europa/digit-ict-conf-2016.git"
  },
  "author": "",
  "license": "EUPL-1.1",
  "bugs": {
    "url": "https://github.com/ec-europa/digit-ict-conf-2016/issues"
  },
  "homepage": "https://github.com/ec-europa/digit-ict-conf-2016#readme",
  "scripts": {
    "postinstall": "npm run build:dll",
    "prebuild": "npm run test && npm run build:clean",
    "build": "cross-env NODE_ENV=production webpack --config tools/webpack/webpack.prod.babel.js --color -p",
    "build:clean": "rimraf ./build/*",
    "build:dll": "node ./tools/scripts/dependencies.js",
    "start": "cross-env NODE_ENV=development node tools/scripts/server.js",
    "postsetup": "npm run build:dll",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ignore-path .gitignore --ignore-pattern tools/scripts",
    "lint:css": "stylelint ./app/**/*.css",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "eslint": "*.js",
    "stylelint": "*.css"
  },
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "maxSubjectLength": 100
    }
  },
  "babel": {
    "presets": [
      "es2015-webpack",
      "react",
      "stage-0"
    ],
    "env": {
      "production": {
        "only": [
          "app"
        ],
        "plugins": [
          "transform-react-remove-prop-types",
          "transform-react-constant-elements",
          "transform-react-inline-elements"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "max-len": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./tools/webpack/webpack.test.babel.js"
        }
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "indentation": 2
    }
  },
  "dllPlugin": {
    "path": "build",
    "exclude": [
      "chalk",
      "compression",
      "cross-env",
      "express",
      "ip",
      "minimist",
      "normalize.css"
    ],
    "include": [
      "core-js",
      "lodash",
      "eventsource-polyfill"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "fontfaceobserver": "^1.7.1",
    "history": "^3.0.0",
    "lodash.memoize": "^4.1.0",
    "material-design-lite": "^1.1.3",
    "normalize.css": "^4.1.1",
    "react": "^15.1.0",
    "react-addons-css-transition-group": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-mdl": "^1.5.4",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "react-router-redux": "^4.0.5",
    "react-router-scroll": "^0.2.0",
    "redux": "^3.5.2",
    "reselect": "^2.5.1",
    "smooth-scroll": "github:cferdinandi/smooth-scroll",
    "typi": "^2.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.5",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.7",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "browser-sync": "^2.13.0",
    "bulma": "0.0.28",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.0",
    "chalk": "^1.1.3",
    "cheerio": "^0.20.0",
    "connect-history-api-fallback": "^1.2.0",
    "copy-webpack-plugin": "^3.0.1",
    "coveralls": "^2.11.9",
    "cross-env": "^1.0.8",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.3.0",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "eventsource-polyfill": "^0.9.6",
    "expect": "^1.20.1",
    "expect-jsx": "^2.6.0",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "front-matter": "^2.1.0",
    "ghooks": "^1.2.4",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.21.0",
    "image-webpack-loader": "^1.8.0",
    "imports-loader": "^0.6.5",
    "ip": "^1.1.3",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "lint-staged": "^1.0.1",
    "loader-utils": "^0.2.15",
    "lodash": "^4.13.1",
    "markdown-it": "^6.1.1",
    "minimist": "^1.2.0",
    "node-sass": "^3.8.0",
    "null-loader": "^0.1.1",
    "offline-plugin": "^3.4.0",
    "plop": "^1.5.0",
    "postcss-cssnext": "^2.6.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.3.3",
    "pre-commit": "^1.1.3",
    "react-hot-loader": "^1.3.0",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.1",
    "sass-resources-loader": "^1.0.2",
    "shelljs": "^0.7.0",
    "standard-version": "^2.3.1",
    "style-loader": "^0.13.1",
    "stylelint": "^6.7.0",
    "stylelint-config-standard": "^9.0.0",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.6.1",
    "webpack": "^2.1.0-beta.8",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
