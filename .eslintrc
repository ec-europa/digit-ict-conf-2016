{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "json"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "max-len": 0,
    "import/imports-first": 0,
    "import/no-extraneous-dependencies": 0,
    "react/jsx-filename-extension": 0
  },
  "globals": {
    "__BASENAME__": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./tools/webpack/webpack.test.babel.js"
      }
    }
  }
}
